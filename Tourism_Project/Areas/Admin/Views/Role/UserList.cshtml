@addTagHelper Tourism_Project.CustomTagHelper.*,Tourism_Project
@model List<AppUser>
@{ ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h1>Kullanıcı Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Rol</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.UserName</td>
    <td user-roles="@item.Id" style="color:darkred" ></td>
    <td><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-warning">Rol Ata</a></td>
</tr>}
</table>

